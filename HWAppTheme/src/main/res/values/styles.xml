<resources>

    <style name="LayoutWrapWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LayoutMatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LayoutMatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LayoutWrapMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/text_size_normal</item>

        <item name="android:minHeight">@dimen/btn_h</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@color/comm_btn_text_selector</item>
    </style>

    <style name="Button.Colored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">@dimen/text_size_normal</item>

        <item name="android:minHeight">@dimen/btn_h</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@color/comm_btn_text_selector</item>
    </style>

    <style name="Button.Colored.Orange">
        <item name="android:background">@drawable/button_orange_selector</item>
    </style>

    <style name="Button.Colored.Orange.Basic">
        <item name="android:textSize">@dimen/text_size_basic</item>
    </style>

    <style name="Button.Colored.Basic">
        <item name="android:textSize">@dimen/text_size_basic</item>
    </style>

    <style name="Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/text_size_normal</item>

        <item name="android:minHeight">0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@color/comm_btn_text_selector</item>
    </style>

    <style name="Button.Borderless.Colored" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">@dimen/text_size_normal</item>

        <item name="android:minHeight">0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@color/comm_btn_text_selector</item>
    </style>

    <style name="Button.Colored.Title">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="Button.Colored.Title.WH_MW">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="Button.WH.MFixed" parent="Button.Colored.Title.WH_MW">
        <item name="android:layout_height">@dimen/btn_h</item>
    </style>

    <style name="Button.Colored.Title.Yellow">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:background">@drawable/rectangle_r2_faaf3e_selector</item>
        <item name="android:textColor">@color/text_white_selector</item>
    </style>

    <style name="Button.Colored.Yellow">
        <item name="android:textSize">@dimen/text_size_basic</item>
        <item name="android:background">@drawable/rectangle_r2_faaf3e_selector</item>
        <item name="android:textColor">@color/text_white_selector</item>
    </style>

    <style name="Button.Colored.Hollow">
        <item name="android:textColor">@color/comm_text_themeprimary_selector</item>
        <item name="android:background">@drawable/rectangle_hollow_selector</item>
    </style>

    <style name="Button.Colored.Hollow.White">
        <item name="android:textColor">@color/comm_text_themeprimary_selector</item>
        <item name="android:background">@drawable/rectangle_hollow_white_selector</item>
    </style>

    <style name="Button.Colored.Hollow.Invert">
        <item name="android:textColor">@color/comm_text_themeprimary_white_selector</item>
        <item name="android:background">@drawable/rectangle_hollow_invert_selector</item>
    </style>

    <style name="Edit.Style" parent="TextPrimary">
        <item name="android:minHeight">40dp</item>
        <item name="android:drawablePadding">10dip</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_bg</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColorHint">@color/textColorPrimaryHintEdit</item>
    </style>

    <style name="Edit.Style.WH.mw" parent="Edit.Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 列表 -->
    <style name="ListViewStyle" parent="Widget.AppCompat.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@color/dividerColor</item>
        <item name="android:childDivider">@color/dividerChildColor</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:fadingEdgeLength">0dp</item>

        <!--<item name="android:listSelector">#00000000</item>-->

        <item name="android:scrollbars">none</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
    </style>


    <style name="ExpandableListViewStyle" parent="Widget.AppCompat.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@color/dividerColor</item>
        <item name="android:childDivider">@color/dividerChildColor</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:fadingEdgeLength">0dp</item>
        <!--<item name="android:listSelector">#00000000</item>-->

        <item name="android:scrollbars">none</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
    </style>

</resources>
