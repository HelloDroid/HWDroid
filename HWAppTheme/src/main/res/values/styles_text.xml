<resources>

    <style name="MyTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/textColorPrimaryHint</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="MyTextAppearance.Basic">
        <item name="android:textSize">@dimen/text_size_basic</item>
    </style>

    <style name="MyTextAppearance.Dark">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <!-- 默认字体style -->
    <style name="TextPrimary">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/textColorPrimaryHint</item>
    </style>
    <!-- 默认字体style 颜色可以选择 -->
    <style name="TextPrimary.Selector">
        <item name="android:textColor">@color/text_selector</item>
    </style>
    <!-- 默认字体style 颜色可以选择，但不包括不可用状态 -->
    <style name="TextPrimary.Selector.Single">
        <item name="android:textColor">@color/text_selector_non_disable</item>
    </style>

    <style name="TextPrimary.Hint">
        <item name="android:textColor">@color/textColorPrimaryHint</item>
    </style>

    <style name="TextPrimary.Hint.Mini">
        <item name="android:textSize">@dimen/text_size_normal_mini</item>
    </style>

    <!-- 默认字体 theme风格 -->
    <style name="TextPrimary.Theme">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/textColorPrimaryHint</item>
    </style>

    <style name="TextPrimary.Theme.Selector">
        <item name="android:textColor">@color/comm_text_themeprimary_selector</item>
    </style>

    <style name="TextPrimary.Theme.Basic">
        <item name="android:textSize">@dimen/text_size_basic</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimaryTranslucent</item>
    </style>

    <style name="TextPrimary.Theme.Basic.Selector">
        <item name="android:textColor">@color/comm_text_themeprimary_selector</item>
    </style>

    <!-- 默认字体Title style -->
    <style name="TitleStyle" parent="TextPrimary">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>
    <!-- 默认字体Title style 颜色可以选择 -->
    <style name="TitleStyle.Selector">
        <item name="android:textColor">@color/text_selector</item>
    </style>
    <!-- 默认字体Title style 颜色可以选择，但不包括不可用状态 -->
    <style name="TitleStyle.Selector.Single">
        <item name="android:textColor">@color/text_selector_non_disable</item>
    </style>

    <!-- 默认字体Big Title style -->
    <style name="TitleStyle.Big">
        <item name="android:textSize">@dimen/text_size_title_big</item>
    </style>
    <!-- 默认字体Big Title style 颜色可以选择 -->
    <style name="TitleStyle.Big.Selector">
        <item name="android:textColor">@color/text_selector</item>
    </style>
    <!-- 默认字体Big Title style 颜色可以选择，但不包括不可用状态 -->
    <style name="TitleStyle.Big.Selector.Single">
        <item name="android:textColor">@color/text_selector_non_disable</item>
    </style>

    <!-- 默认字体Basic style -->
    <style name="TextBasic" parent="TextPrimary">
        <item name="android:textSize">@dimen/text_size_basic</item>
    </style>
    <!-- 默认字体Basic style 颜色可以选择 -->
    <style name="TextBasic.Selector">
        <item name="android:textColor">@color/text_selector</item>
    </style>
    <!-- 默认字体Basic style 颜色可以选择，但不包括不可用状态 -->
    <style name="TextBasic.Selector.Single">
        <item name="android:textColor">@color/text_selector_non_disable</item>
    </style>

    <!-- 默认字体mini style -->
    <style name="TextMini" parent="TextPrimary">
        <item name="android:textSize">@dimen/text_size_normal_mini</item>
    </style>
    <!-- 默认字体mini style 颜色可以选择 -->
    <style name="TextMini.Selector">
        <item name="android:textColor">@color/text_selector</item>
    </style>
    <!-- 默认字体mini style 颜色可以选择，但不包括不可用状态 -->
    <style name="TextMini.Selector.Single" parent="TextMini">
        <item name="android:textColor">@color/text_selector_non_disable</item>
    </style>

    <!-- 默认字体smallest style -->
    <style name="TextSmallest" parent="TextPrimary">
        <item name="android:textSize">@dimen/text_size_normal_smallest</item>
    </style>
    <!-- 默认字体smallest style 颜色可以选择 -->
    <style name="TextSmallest.Selector">
        <item name="android:textColor">@color/text_selector</item>
    </style>
    <!-- 默认字体smallest style 颜色可以选择，但不包括不可用状态 -->
    <style name="TextSmallest.Selector.Single">
        <item name="android:textColor">@color/text_selector_non_disable</item>
    </style>

    <!-- 默认字体smallest style -->
    <style name="TextSmallest2" parent="TextPrimary">
        <item name="android:textSize">@dimen/text_size_normal_smallest_2</item>
    </style>
    <!-- 默认字体smallest style 颜色可以选择 -->
    <style name="TextSmallest2.Selector">
        <item name="android:textColor">@color/text_selector</item>
    </style>
    <!-- 默认字体smallest style 颜色可以选择，但不包括不可用状态 -->
    <style name="TextSmallest2.Selector.Single">
        <item name="android:textColor">@color/text_selector_non_disable</item>
    </style>

    <style name="Label" parent="TextPrimary">
        <item name="android:textColor">#FF666666</item>
    </style>

    <style name="TextTips" parent="TextPrimary">
        <item name="android:textColor">#FF999999</item>
        <item name="android:textSize">@dimen/text_size_normal_smallest</item>
    </style>

    <style name="TextTips.Mini">
        <item name="android:textSize">@dimen/text_size_normal_mini</item>
    </style>

    <style name="TextTips.Primary">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="TextFFF" parent="TextPrimary">
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <style name="TextFFF.12">
        <item name="android:textSize">12dp</item>
    </style>


    <style name="TextFFF.13">
        <item name="android:textSize">13dp</item>
    </style>

    <style name="TitleFFF" parent="TextFFF">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="SubTitleFFF" parent="TextFFF">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="SubTitleFFF.Mini">
        <item name="android:textSize">@dimen/text_size_normal_mini</item>
    </style>

    <style name="SubTitleFFF.Selector">
        <item name="android:textColor">@color/comm_text_white_selector</item>
    </style>

    <style name="SubTitleFFF.Selector.Mini">
        <item name="android:textSize">@dimen/text_size_normal_mini</item>
    </style>

    <!-- shadow -->
    <style name="ShadowWhite">
        <item name="android:shadowColor">#8FFFFFFF</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0.65</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="TextWhite_Bold_12" parent="TextPrimary">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextPrimary.009fde_15" parent="TextPrimary">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#009FDE</item>
    </style>

</resources>
