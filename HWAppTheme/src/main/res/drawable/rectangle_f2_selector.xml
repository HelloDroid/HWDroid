    <item android:state_focused="true">
        <shape>
            <stroke android:width="2dp" android:color="#9FF2F2F2"/>
            <corners android:radius="2dp"/>
            <solid android:color="#9FF2F2F2"/>
        </shape>
    </item>
    -->
    <item>
        <shape>
            <stroke android:width="0dp" android:color="#FFF2F2F2"/>
            <corners android:radius="@dimen/radius"/>
            <solid android:color="#FFF2F2F2"/>
        </shape>
    </item>

</selector>