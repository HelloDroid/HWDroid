<?xml version="1.0" encoding="utf-8"?>
<!--
    跟节点android.support.design.widget.CoordinatorLayout android:fitsSystemWindows="true" 有效
    否则,状态栏显示灰色
 -->
<android.support.design.widget.CoordinatorLayout
    android:id="@id/coordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="@dimen/elevation_h"
        >

        <android.support.v7.widget.Toolbar
            android:id="@id/toolbar"
            style="@style/HWToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:elevation="@dimen/elevation_h"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            >

            <com.hw.hwdroid.foundation.app.widget.HTitleBarView
                android:id="@id/titleBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:htitlebar_ios="true"
                app:htitlebar_mode="back_title"
                />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/common_content"/>


</android.support.design.widget.CoordinatorLayout>
