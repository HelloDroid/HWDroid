<resources>


    <declare-styleable name="HTitleBarView">
        <attr name="htitlebar_ios" format="boolean"/>

        <attr name="htitlebar_mode" format="enum">
            <enum name="back_title" value="0"/>
            <enum name="back" value="1"/>
            <enum name="title" value="2"/>
            <enum name="back_menu" value="3"/>
            <enum name="back_menutext" value="4"/>
            <enum name="backtext_menutext" value="5"/>
        </attr>

        <attr name="htitlebar_title_text" format="string" localization="suggested"/>
        <attr name="htitlebar_subtitle_text" format="string" localization="suggested"/>

        <!-- left_text存在时 backButton会被隐藏-->
        <attr name="htitlebar_backtext_text" format="string" localization="suggested"/>
        <attr name="htitlebar_menutext_text" format="string" localization="suggested"/>
    </declare-styleable>

</resources>