<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_tv"
        style="@style/TextPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:minHeight="45dp"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            >

            <com.hw.hwdroid.dialog.wegit.CNumberPickerView
                android:id="@+id/c_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:c_npv_DividerColor="@color/dividerColor"
                app:c_npv_ItemPaddingHorizontal="5dp"
                app:c_npv_ItemPaddingVertical="12dp"
                app:c_npv_RespondChangeOnDetached="false"
                app:c_npv_ShowCount="5"
                app:c_npv_TextColorNormal="@color/textColorPrimary"
                app:c_npv_TextColorSelected="@color/colorPrimary"
                app:c_npv_TextSizeNormal="14dp"
                app:c_npv_TextSizeSelected="17dp"
                app:c_npv_WrapSelectorWheel="false"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@drawable/divider_line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/action_sheet_textcolor_selector_theme"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/divider_line"
                />

            <TextView
                android:id="@+id/ok_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="@string/ok"
                android:textColor="@color/action_sheet_textcolor_selector_theme"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>