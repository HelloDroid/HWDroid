<?xml version="1.0" encoding="utf-8"?>
<!-- android:padding="25dip" -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:clickable="true"
             android:minWidth="280dp"
             android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/my_alert_dialog_bg">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:orientation="vertical">


            <TextView
                android:id="@+id/titel_text"
                style="@style/HWDialog.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:padding="10dp"
                tools:text="标题"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/content_text"
                    style="@style/HWDialog.Content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="10dip"
                    android:minHeight="76dip"
                    android:paddingBottom="5dip"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:paddingTop="5dip"
                    tools:text="content"/>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:layout_below="@+id/content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="vertical">

            <include layout="@layout/my_alert_dialog_line"/>

            <TextView
                android:id="@+id/single_btn"
                style="@style/HWDialog.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/igot"/>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>